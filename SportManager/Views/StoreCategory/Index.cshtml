@model IEnumerable<SportManager.Models.StoreItem>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>@ViewBag.StoreCategory</h5>
                    </div>
                    <div class="card-block">
                        <p>
                            <a asp-action="/StoreItems/Create" asp-route="@ViewBag.StoreCategoryId">Create New Item</a>
                        </p>
                        <div class="table-responsive dt-responsive">
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Count)
                                        </th>
                                        <th>
                                            No. of items in use
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Count)
                                                    </td>
                                                    <td>
                                                        @item.StoreItemsInUse.Count()
                                                    </td>
                                                    <td>
                                                        @*@Html.ActionLink("Items", "Index", "StoreCategory", new { id = item.Id }) |*@
                                                        @Html.ActionLink("Edit", "Edit", "StoreItem", new { id = item.Id }) |
                                                        @Html.ActionLink("Details", "Details", "StoreItem", new { id = item.Id }) |
                                                        @Html.ActionLink("Delete", "Delete", "StoreItem", new { id = item.Id })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Count)
                                        </th>
                                        <th>
                                            No. of items in use
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
