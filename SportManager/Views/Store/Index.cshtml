@model IEnumerable<SportManager.Models.StoreCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>@ViewBag.Store</h5>
                    </div>
                    <div class="card-block">
                        <p>
                            <a asp-action="/StoreCategory/Create">Create New Category</a>
                        </p>
                        <div class="table-responsive dt-responsive">
                            @{ if (ViewBag.Failed != null)
                                {
                                    <div class="alert alert-danger background-danger">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Failed!</strong>
                                        <code>
                                            @ViewBag.Failed
                                        </code>
                                    </div> }
                                if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success background-success">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Success!</strong>
                                        <code>
                                            @ViewBag.Success
                                        </code>
                                    </div> }
                            }
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            No. of items
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @item.StoreItems.Count()
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Items", "Index", "StoreCategory", new { id = item.Id }) |
                                                        @Html.ActionLink("Edit", "Edit", "StoreCategory", new { id = item.Id }) |
                                                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                                                        @Html.ActionLink("Delete", "Delete", "StoreCategory", new { id = item.Id })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            No. of items
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
