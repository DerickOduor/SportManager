@model IEnumerable<SportManager.Models.Event>
@using SportManager.Models

@{
    ViewData["Title"] = "Index";
    List<EventType> eventTypes = null;
    try
    {
        if (ViewBag.EventTypes != null)
        {
            eventTypes=(List<EventType>)ViewBag.EventTypes;
        }
    }
    catch (Exception ex) { }
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>Events</h5>
                    </div>
                    <div class="card-block">
                        <p>
                            <a asp-action="Create">Create New</a>
                        </p>
                        <div class="table-responsive dt-responsive">
                            @{ if (ViewBag.Failed != null)
                                {
                                    <div class="alert alert-danger background-danger">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Failed!</strong>
                                        <code>
                                            @ViewBag.Failed
                                        </code>
                                    </div> }
                                if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success background-success">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Success!</strong>
                                        <code>
                                            @ViewBag.Success
                                        </code>
                                    </div> }
                            }
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventTypeId)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StartDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.EndDate)
                                                    </td>
                                                    <td>
                                                        @*@Html.DisplayFor(modelItem => item.EventTypeId)*@
                                                        @{
                                                            if (eventTypes != null)
                                                            {
                                                                foreach (EventType eventType in eventTypes)
                                                                {
                                                                    if (eventType.Id.Equals(item.EventTypeId))
                                                                    {
                                                                        @eventType.Name
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                                                        @Html.ActionLink("Add session", "Create", "EventSession", new { id = item.Id })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EndDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.EventTypeId)
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
