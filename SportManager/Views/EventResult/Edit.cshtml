@model SportManager.Models.EventResult
@using SportManager.Models

@{
    ViewData["Title"] = "Create";
    SportDisciplinesInEvent disciplineInEvent = null;
    try
    {
        if (ViewBag.SportDisciplineInEvent != null)
            disciplineInEvent = (SportDisciplinesInEvent)ViewBag.SportDisciplineInEvent;
    }
    catch (Exception ex) { }
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                                <h5>Edit event results for @disciplineInEvent.SportDiscipine.Name</h5>
                            </div>
                            <div class="card-block">
                                <form id="profileForm" method="post" asp-action="Edit" autocomplete="off">
                                    <input type="hidden" class="form-control" asp-for="SportDisciplinesInEventId" value="@disciplineInEvent.Id" required>
                                    <input type="hidden" class="form-control" asp-for="Id" required>
                                    @{ if (ViewBag.Failed != null)
                                        {
                                            <div class="alert alert-danger background-danger">
                                                <button type="button" class="close"
                                                        data-dismiss="alert" aria-label="Close">
                                                    <i class="icofont icofont-close-line-circled text-white"></i>
                                                </button>
                                                <strong>Failed!</strong>
                                                <code>
                                                    @ViewBag.Failed
                                                </code>
                                            </div> }
                                        if (ViewBag.Success != null)
                                        {
                                            <div class="alert alert-success background-success">
                                                <button type="button" class="close"
                                                        data-dismiss="alert" aria-label="Close">
                                                    <i class="icofont icofont-close-line-circled text-white"></i>
                                                </button>
                                                <strong>Success!</strong>
                                                <code>
                                                    @ViewBag.Success
                                                </code>
                                            </div> }
                                    }
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">No. Of Matches&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control" min="0" asp-for="NoOfMatches" required>
                                            <span asp-validation-for="NoOfMatches" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Matches Won&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="number" min="0" class="form-control" asp-for="MatchesWon" required>
                                            <span asp-validation-for="MatchesWon" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Matches Drawn&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="number" min="0" class="form-control" asp-for="MatchesDrawn" required>
                                            <span asp-validation-for="MatchesDrawn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Matches Lost&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="number" min="0" class="form-control" asp-for="MatchesLost" required>
                                            <span asp-validation-for="MatchesLost" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Event type&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <select type="text" class="form-control" asp-for="TournamentStageId" asp-items="ViewBag.TournamentStages">
                                                <option disabled selected>--select--</option>
                                            </select>
                                            <span asp-validation-for="TournamentStageId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2"></label>
                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary m-b-0">Update</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div>
            <a asp-action="Index" class="btn btn-primary waves-effect waves-light">Back to List</a>
        </div>
    </div>
</div>
