@model IEnumerable<SportManager.Models.Parameter>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">

                <div class="card">
                    <div class="card-header">
                        <h5>System parameters</h5>
                    </div>
                    <div class="card-block">
                        <p>
                            <a asp-action="Create">Add New</a>
                        </p>
                        @if (Model != null)
                        {
                            if (Model.Count() > 0)
                            {
                                <div class="container">
                                    <a asp-action="Report" class="btn btn-primary waves-effect waves-light btn-sm">Generate report</a>
                                </div>
                            }
                        }
                        <div class="table-responsive dt-responsive">
                            @{ if (ViewBag.Failed != null)
                                {
                                    <div class="alert alert-danger background-danger">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Failed!</strong>
                                        <code>
                                            @ViewBag.Failed
                                        </code>
                                    </div> }
                                if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success background-success">
                                        <button type="button" class="close"
                                                data-dismiss="alert" aria-label="Close">
                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                        </button>
                                        <strong>Success!</strong>
                                        <code>
                                            @ViewBag.Success
                                        </code>
                                    </div> }
                            }
                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Value)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsPassword)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model != null)
                                        {
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Value)
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (item.IsPassword)
                                                                @Html.Raw("Yes")
                                                                else
                                                                    @Html.Raw("No")
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Value)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsPassword)
                                        </th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
