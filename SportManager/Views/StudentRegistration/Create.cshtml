    <section class="login-block">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">

                    <form asp-action="Create" class="md-float-material form-material" id="login-form">
                        <div class="text-center">
                            @*<img src="~/assets/png/logo_app.png" alt="logo.png">*@
                        </div>
                        <div class="auth-box card">
                            <div class="card-block">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-center txt-primary">Student registration</h3>
                                    </div>
                                </div>
                                <p class="text-muted text-center p-b-5">Provide your details below</p>
                                @{
                                    if (ViewBag.Failed != null)
                                    {
                                        <div class="alert alert-danger background-danger">
                                            <button type="button" class="close"
                                                    data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Failed!</strong>
                                            <code>
                                                @ViewBag.Failed
                                            </code>
                                        </div> }
                                    if (ViewBag.Success != null)
                                    {
                                        <div class="alert alert-success background-success">
                                            <button type="button" class="close"
                                                    data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Success!</strong>
                                            <code>
                                                @ViewBag.Success
                                            </code>
                                        </div> }
                                }

                                <div class="form-group form-primary">
                                    <input type="text" asp-for="RegistrationNumber" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Registration Number</label>
                                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="text" asp-for="Firstname" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Firstname</label>
                                    <span asp-validation-for="Firstname" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="text" asp-for="Lastname" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Lastname</label>
                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="text" asp-for="Email" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">E-mail address</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="text" asp-for="Phone" class="form-control" placeholder="+254712345678" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Phone</label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary row">
                                    <label class="col-sm-2 col-form-label">Sport&nbsp;<span style="color:red;">*</span></label>
                                    <div class="col-sm-10">
                                        <select type="text" class="form-control" asp-for="SportDiscipineId" asp-items="ViewBag.sportDiscipines">
                                            <option disabled selected>--select--</option>
                                        </select>
                                        <span asp-validation-for="SportDiscipineId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="password" asp-for="Password" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" required="" autocomplete="off" />
                                    <span class="form-bar"></span>
                                    <label class="float-label">Confirm Password</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="row m-t-25 text-left">
                                    <div class="col-12">
                                        <div class="forgot-phone text-right float-right">
                                            <a href="/Login" class="text-right f-w-600">Back to login</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Register</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

