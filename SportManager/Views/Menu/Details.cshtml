@model SportManager.Models.Menu

@{
    ViewData["Title"] = "Details";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                                <h5>Menu Details</h5>
                            </div>
                            <div class="card-block">
                                @{ if (ViewBag.Failed != null)
                                    {
                                        <div class="alert alert-danger background-danger">
                                            <button type="button" class="close"
                                                    data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Failed!</strong>
                                            <code>
                                                @ViewBag.Failed
                                            </code>
                                        </div> }
                                    if (ViewBag.Success != null)
                                    {
                                        <div class="alert alert-success background-success">
                                            <button type="button" class="close"
                                                    data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled text-white"></i>
                                            </button>
                                            <strong>Success!</strong>
                                            <code>
                                                @ViewBag.Success
                                            </code>
                                        </div> }
                                }
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.MenuType)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MenuType)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.MenuUser)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MenuUser)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Level)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Level)
                                    </dd>
                                </dl>

                                <div class="card">
                                    <div class="card-header">
                                        <h5>Sub-menus</h5>
                                    </div>
                                    <div class="card-block">
                                        <p>
                                            <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="SubMenu">Add sub-menu</a>
                                        </p>
                                        <div class="table-responsive dt-responsive">
                                            @{ if (ViewBag.Failed != null)
                                                {
                                                    <div class="alert alert-danger background-danger">
                                                        <button type="button" class="close"
                                                                data-dismiss="alert" aria-label="Close">
                                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                                        </button>
                                                        <strong>Failed!</strong>
                                                        <code>
                                                            @ViewBag.Failed
                                                        </code>
                                                    </div> }
                                                if (ViewBag.Success != null)
                                                {
                                                    <div class="alert alert-success background-success">
                                                        <button type="button" class="close"
                                                                data-dismiss="alert" aria-label="Close">
                                                            <i class="icofont icofont-close-line-circled text-white"></i>
                                                        </button>
                                                        <strong>Success!</strong>
                                                        <code>
                                                            @ViewBag.Success
                                                        </code>
                                                    </div> }
                                            }
                                            <table id="dom-jqry" class="table table-striped table-bordered nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Name)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.MenuType)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Level)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Link)
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        if (ViewBag.SubMenus != null)
                                                        {
                                                            @foreach (var item in (List<Menu>)ViewBag.SubMenus)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Name)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.MenuType)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Level)
                                                                    </td>
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.Link)
                                                                    </td>
                                                                    <td>
                                                                        @Html.ActionLink("Edit", "Edit", "SubMenu", new { id = item.Id })
                                                                        @Html.Raw(" | ")
                                                                        @Html.ActionLink("Delete", "Delete", "SubMenu", new { id = item.Id })
                                                                        @Html.Raw(" | ")
                                                                        @Html.ActionLink("Details", "Details", "SubMenu", new { id = item.Id })
                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Name)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.MenuType)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Level)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Link)
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

