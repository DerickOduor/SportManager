@model SportManager.Models.StoreItem

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            @*<div class="page-header-title">
                    <i class="feather icon-home bg-c-blue"></i>
                    <div class="d-inline">
                        <h5>Dashboard</h5>
                        <span>Welcome user.</span>
                    </div>
                </div>*@
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="/home"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="#!">Dashboard</a> </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">

                        <div class="card">
                            <div class="card-header">
                                <h5>Edit Store Item</h5>
                            </div>
                            <div class="card-block">
                                <form id="profileForm" method="post" asp-action="Create" autocomplete="off">
                                    <input type="text" class="form-control" asp-for="Id" required>
                                    @{ if (ViewBag.Failed != null)
                                        {
                                            <div class="alert alert-danger background-danger">
                                                <button type="button" class="close"
                                                        data-dismiss="alert" aria-label="Close">
                                                    <i class="icofont icofont-close-line-circled text-white"></i>
                                                </button>
                                                <strong>Failed!</strong>
                                                <code>
                                                    @ViewBag.Failed
                                                </code>
                                            </div> }
                                        if (ViewBag.Success != null)
                                        {
                                            <div class="alert alert-success background-success">
                                                <button type="button" class="close"
                                                        data-dismiss="alert" aria-label="Close">
                                                    <i class="icofont icofont-close-line-circled text-white"></i>
                                                </button>
                                                <strong>Success!</strong>
                                                <code>
                                                    @ViewBag.Success
                                                </code>
                                            </div> }
                                    }
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Name&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" asp-for="Name" required>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Count&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" asp-for="Count" required>
                                            <span asp-validation-for="Count" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Store Category&nbsp;<span style="color:red;">*</span></label>
                                        <div class="col-sm-10">
                                            @{
                                                if (ViewBag.StoreCategory != null)
                                                {
                                                    StoreCategory storeCategory = (StoreCategory)ViewBag.StoreCategory;
                                                    <select type="text" class="form-control" asp-for="StoreCategoryId">
                                                        <option value="@storeCategory.Id" selected>@storeCategory.Name</option>
                                                    </select>
                                                }
                                                else
                                                {
                                                    <select type="text" class="form-control" asp-for="StoreCategoryId" asp-items="ViewBag.StoreCategories">
                                                        <option disabled selected>--select--</option>
                                                    </select>
                                                }
                                            }
                                            <span asp-validation-for="StoreCategoryId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2"></label>
                                        <div class="col-sm-10">
                                            <button type="submit" class="btn btn-primary m-b-0">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <div>
            <a asp-action="Index" class="btn btn-primary waves-effect waves-light">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
